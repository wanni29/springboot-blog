{{> /layout/header}}

<br>
<div class="container p-5">

  <div class="mb-2 d-flex justify-content-end">
    <form class="d-flex" action="/" method="get">
      <input class="form-control me-2" action type="text" name="keyword" placeholder="Serach" required>
      <button class="btn btn-primary" type="submit">Search</button>
    </form>
  </div>

  {{#boardList}}
  <div class="card mb-4">
    <div class="card-body">
      <h4 class="card-title mb-3">{{title}}</h4>
      <a href="/board/{{id}}" class="btn btn-outline-danger">상세보기</a>
    </div>
  </div>
  {{/boardList}}

  <br>
  <br>

  <!--disable-->
  <ul class="pagination d-flex justify-content-center">
    <li class="page-item {{#first}}disabled{{/first}}"><a class="page-link" href="?page={{prevPage}}&keyword={{keyword}}">Previous</a></li>
    <!--서버사이드랜더링-->
    <li class="page-item {{#last}}disabled{{/last}}"><a class="page-link" href="?page={{nextPage}}&keyword={{keyword}}">Next</a></li>
  </ul>
  <!--라스트 페이지 ->  퍼스트 페이지 -> 0 -->
  {{> /layout/footer}}